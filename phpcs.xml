<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <file>./src</file>
    <exclude-pattern>./src/Provider/*</exclude-pattern>
    <rule ref="PSR2"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="180"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>
</ruleset>